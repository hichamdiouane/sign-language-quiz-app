<?xml version="1.0" encoding="utf-8"?>
<!-- Save this as drawable/option_button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8F5E9" /> <!-- Light green background when selected -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#4CAF50" /> <!-- Green border -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- Light gray border -->
        </shape>
    </item>
</selector>